@each(comment in thread.comments)
<div class="bg-light p-2 mt-1">
  <div class="d-flex justify-content-end">
    Commented by: {{ truncate(comment.author.username,30,'...') }} - {{dateformat(comment.created_at)}}
  </div>
  <div class="fr-view bg-white p-2">
    {{rawcontent(comment.content)}}
  </div>
</div>
@endeach
